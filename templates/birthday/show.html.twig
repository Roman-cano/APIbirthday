{% block title %}Birthday{% endblock %}

{% block body %}
    <h1>Birthday</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ birthday.id }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ birthday.prenom }}</td>
            </tr>
