{% extends 'base.html.twig' %}

{% block title %}Birthday index{% endblock %}

{% block body %}
    <h1>Birthday index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Anniversaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for birthday in birthdays %}
            <tr>
                <td>{{ birthday.id }}</td>
                <td>{{ birthday.prenom }}</td>
                <td>{{ birthday.nom }}</td>
                <td>{{ birthday.anniversaire ? birthday.anniversaire|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_birthday_show', {'id': birthday.id}) }}">show</a>
                    <a href="{{ path('app_birthday_edit', {'id': birthday.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_birthday_new') }}">Create new</a>
{% endblock %}
